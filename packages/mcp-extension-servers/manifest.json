{
  "manifest_version": 3,
  "name": "izan.io Macros - Browser Automation for AI",
  "version": "0.1.0",
  "description": "Record browser actions as reusable macros. AI agents run your automations via MCP. No code needed.",
  "permissions": ["tabs", "scripting", "debugger", "sidePanel", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://izan.io/*", "https://*.izan.io/*", "http://localhost/*", "http://127.0.0.1/*"],
      "js": ["content.js"],
      "world": "ISOLATED",
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "izan.io Macros",
    "default_popup": ""
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://izan.io",
  "minimum_chrome_version": "116"
}
